<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.base.app">

    <application
            android:name="com.base.library.base.BApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:replace="android:icon">

        <activity android:name=".module.common.ui.MainActivity">

        </activity>

        <activity android:name=".module.common.ui.LoginActivity">

        </activity>

        <activity android:name=".module.common.ui.RegisterActivity">

        </activity>

        <activity android:name="com.base.library.mvp.template.ui.Demo1Activity">

        </activity>

        <!-- 作为新功能的尝试 -->
        <activity android:name=".module.newfunction.ui.FunctionActivity">

        </activity>
        <activity android:name=".module.newfunction.ui.ViewPage2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 沉浸式,全面屏 -->
        <meta-data
                android:name="android.max_aspect"
                android:value="2.4" />

        <!--适配华为（huawei）刘海屏-->
        <meta-data
                android:name="android.notch_support"
                android:value="true" />
        <!--适配小米（xiaomi）刘海屏-->
        <meta-data
                android:name="notch.config"
                android:value="portrait|landscape" />

    </application>

</manifest>