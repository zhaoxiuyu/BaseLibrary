<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/pt_8">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/material_textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/pt_15"
        tools:text="DynamicHeightImageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/material_textview_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pt_4"
        android:textSize="@dimen/pt_13"
        tools:text="可设置宽高比的图片" />

</LinearLayout>