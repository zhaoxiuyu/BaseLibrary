<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:t="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/pt_100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/pt_100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="纯色角标" />

        <com.base.library.view.TriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            app:trv_color="@color/color_03A9F4"
            app:trv_direction="top" />

        <com.base.library.view.TriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            app:trv_color="@color/color_03A9F4"
            app:trv_direction="left" />

        <com.base.library.view.TriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            app:trv_color="@color/color_03A9F4"
            app:trv_direction="right" />

        <com.base.library.view.TriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            app:trv_color="@color/color_03A9F4"
            app:trv_direction="bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="带文字直角角标" />

        <com.zyl.triangleview.widget.TriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            t:t_fillColor="#FF0000"
            t:t_text="测试"
            t:t_textColor="#FFF"
            t:t_textSize="18sp"
            t:t_type="leftTop" />

        <com.zyl.triangleview.widget.TriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            t:t_fillColor="#FF0000"
            t:t_text="测试"
            t:t_textColor="#FFF"
            t:t_textSize="18sp"
            t:t_type="rightTop" />

        <com.zyl.triangleview.widget.TriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            t:t_fillColor="#FF0000"
            t:t_text="测试"
            t:t_textColor="#FFF"
            t:t_textSize="18sp"
            t:t_type="rightBottom" />

        <com.zyl.triangleview.widget.TriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            t:t_fillColor="#FF0000"
            t:t_text="测试"
            t:t_textColor="#FFF"
            t:t_textSize="18sp"
            t:t_type="leftBottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="带文字圆角角标" />

        <com.zyl.triangleview.widget.RoundTriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            t:rt_fillColor="#FF0000"
            t:rt_roundRadius="10"
            t:rt_text="测试"
            t:rt_textColor="#FFF"
            t:rt_textSize="18sp"
            t:rt_type="rightTop" />

        <com.zyl.triangleview.widget.RoundTriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            t:rt_fillColor="#FF0000"
            t:rt_roundRadius="20"
            t:rt_text="测试"
            t:rt_textColor="#FFF"
            t:rt_textSize="18sp"
            t:rt_type="rightBottom" />

        <com.zyl.triangleview.widget.RoundTriangleView
            android:layout_width="@dimen/pt_100"
            android:layout_height="@dimen/pt_100"
            android:layout_marginTop="@dimen/pt_100"
            t:rt_fillColor="#FF0000"
            t:rt_roundRadius="30"
            t:rt_text="测试"
            t:rt_textColor="#FFF"
            t:rt_textSize="18sp"
            t:rt_type="leftBottom" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>