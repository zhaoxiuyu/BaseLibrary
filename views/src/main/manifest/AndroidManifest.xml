<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.base.views">

    <application
        android:name=".base.ViewsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/views_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/common_Theme.BaseLibrary"
        tools:replace="android:label">

        <activity
            android:name=".ui.activity.ViewsEntranceActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ViewsAnimatedTvActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.ViewsMotionActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.ViewsTriangleActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.ViewsVP2Activity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.ViewsVP2TabActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activity.ViewsConstraintActivity"
            android:exported="false" />

    </application>

</manifest>